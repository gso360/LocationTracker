{
  "name": "Showroom Inventory Manager",
  "short_name": "Inventory",
  "description": "Inventory management application with barcode scanning for iOS",
  "developer": {
    "name": "Your Company",
    "url": "https://yourcompany.com"
  },
  "version": "1.0.0",
  "build": 1,
  "ios": {
    "bundleId": "com.showroommanager.app",
    "appStoreUrl": "",
    "appStoreId": "",
    "capabilities": [
      "camera"
    ],
    "entitlements": [
      "com.apple.developer.networking.wifi-info"
    ],
    "frameworks": [
      "CoreBluetooth",
      "AVFoundation"
    ],
    "buildSettings": {
      "DEVELOPMENT_TEAM": "",
      "CODE_SIGN_IDENTITY": "iPhone Developer",
      "TARGETED_DEVICE_FAMILY": "1",
      "IPHONEOS_DEPLOYMENT_TARGET": "13.0"
    },
    "infoPlist": {
      "NSCameraUsageDescription": "This app needs camera access to scan barcodes and take photos of inventory locations.",
      "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth for connecting to barcode scanners.",
      "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth for connecting to barcode scanners.",
      "CFBundleShortVersionString": "1.0.0",
      "CFBundleVersion": "1",
      "UIBackgroundModes": ["bluetooth-central"],
      "UIRequiresFullScreen": true,
      "UIStatusBarHidden": false,
      "UIStatusBarStyle": "UIStatusBarStyleDarkContent",
      "UIViewControllerBasedStatusBarAppearance": true,
      "UIApplicationSceneManifest": {
        "UIApplicationSupportsMultipleScenes": false
      }
    },
    "icons": {
      "app-60@2x": "ios/icons/app-60@2x.png",
      "app-60@3x": "ios/icons/app-60@3x.png",
      "app-76": "ios/icons/app-76.png",
      "app-76@2x": "ios/icons/app-76@2x.png",
      "app-83.5@2x": "ios/icons/app-83.5@2x.png",
      "app-40": "ios/icons/app-40.png",
      "app-40@2x": "ios/icons/app-40@2x.png",
      "app-40@3x": "ios/icons/app-40@3x.png",
      "app-20": "ios/icons/app-20.png",
      "app-20@2x": "ios/icons/app-20@2x.png",
      "app-20@3x": "ios/icons/app-20@3x.png",
      "app-1024": "ios/icons/app-1024.png"
    },
    "splashScreens": {
      "LaunchImage@2x~iphone": "ios/splash/LaunchImage@2x~iphone.png",
      "LaunchImage@3x~iphone": "ios/splash/LaunchImage@3x~iphone.png",
      "LaunchImage@2x~ipad": "ios/splash/LaunchImage@2x~ipad.png",
      "LaunchImage-Portrait@2x~ipad": "ios/splash/LaunchImage-Portrait@2x~ipad.png"
    }
  },
  "scripts": {
    "build": "npx cap sync ios && npx cap open ios",
    "production": "npx cap sync ios && xcodebuild -workspace ios/App/App.xcworkspace -scheme App -configuration Release -sdk iphoneos"
  },
  "dependencies": {
    "@capacitor/ios": "^7.1.0",
    "@capacitor/camera": "^7.0.0",
    "@capacitor/core": "^7.1.0"
  }
}